<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eReceipt.app">

    <application
        android:name=".utils.EreceiptApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CreateAccountActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ActivationCodeActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.PassCodeActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ConfirmPassCodeActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.AccountRegistrationActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.MyCustomersActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.PaymentsReceivedActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.CompanyDetailsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.InvoiceListActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.CustomerEntryFormActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.PaymentsGivenActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.MyVendorsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.VendorEntryFormActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.AddCompanyActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.AddContactActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ContactDetailActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.MyAccountActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.InvoiceDetailActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
