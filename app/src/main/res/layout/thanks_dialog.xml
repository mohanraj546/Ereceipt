<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/thanks_dg_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

    <com.eReceipt.app.utils.CustomTextView
        android:id="@+id/tv_thank_u"
        style="@style/helvetica_bold_font"
        android:text="@string/thanks_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/create_account_enter_ph_no"
        android:textSize="@dimen/thanks_tv_size"
        android:gravity="center"
        android:layout_marginBottom="@dimen/thanks_dg_margin_bottom"/>

    <com.eReceipt.app.utils.CustomTextView
        android:id="@+id/tv_profile_name"
        style="@style/helvetica_regular_font"
        android:text="@string/thanks_dialog_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/create_account_enter_ph_no"
        android:textSize="@dimen/acct_reg_tv_size"
        android:gravity="center"
        android:layout_marginBottom="@dimen/thanks_dg_margin_bottom"/>

    <ImageView
        android:id="@+id/iv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/nextarrow"/>

    </LinearLayout>

</RelativeLayout>